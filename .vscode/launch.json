{
    "version": "0.2.0",
    "configurations": [
        // LAUNCH
        {
            "name": "Launch Edge",
            "type": "edge",
            "request": "launch",
            "url": "http://localhost:8000/",
            "webRoot": "${workspaceRoot}/dist/"
        },
        {
            "name": "Launch Chrome",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:8000/",
            "webRoot": "${workspaceRoot}/dist/"
        },

        // LAUNCH SOURCEMAPS
        {
            "name": "Launch Edge (with sourcemaps)",
            "type": "edge",
            "request": "launch",
            "url": "http://localhost:8000",
            "sourceMaps": true,
            "webRoot": "${workspaceRoot}/dist/"
        },
        {
            "name": "Launch Chrome (with sourcemaps)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:8000",
            "sourceMaps": true,
            "webRoot": "${workspaceRoot}/dist/"
        },


        // ATTACH
        {
            "name": "Attach to Edge",
            "type": "edge",
            "request": "attach",
            "port": 9222,
            "webRoot": "${workspaceRoot}/dist/"
        },
        {
            "name": "Attach to Chrome",
            "type": "chrome",
            "request": "attach",
            "port": 9222,
            "webRoot": "${workspaceRoot}/dist/"
        },

        // ATTACH SOURCEMAPS
        {
            "name": "Attach to Edge, with sourcemaps",
            "type": "edge",
            "request": "attach",
            "port": 9222,
            "sourceMaps": true,
            "webRoot": "${workspaceRoot}/dist/"

        },
        {
            "name": "Attach to Chrome, with sourcemaps",
            "type": "chrome",
            "request": "attach",
            "port": 9222,
            "sourceMaps": true,
            // "diagnosticLogging": true,
            "webRoot": "${workspaceRoot}/dist/"
        }
    ]
}